{
    "name": "crustum/blazecast",
    "description": "Self-hosted WebSocket server for CakePHP applications",
    "type": "cakephp-plugin",
    "license": "MIT",
    "require": {
        "php": ">=8.2",
        "cakephp/cakephp": "^5.2",
        "crustum/plugin-manifest": "^1.0",
        "clue/redis-react": "^2.6",
        "firebase/php-jwt": "^6.11",
        "guzzlehttp/psr7": "^2.6",
        "pusher/pusher-php-server": "^7.2",
        "ratchet/rfc6455": "^0.4",
        "react/async": "^4.3",
        "react/promise-timer": "^1.10",
        "react/socket": "^1.14",
        "skie/signal_handler": "^1.0",
        "symfony/routing": "^7.3",
        "symfony/http-foundation": "^6.0",
        "symfony/config": "^7.0",
        "crustum/rhythm": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.1",
        "ratchet/pawl": "^0.4",
        "react/http": "^1.7",
        "cakephp/cakephp-codesniffer": "^5.0",
        "cakephp/bake": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Crustum\\BlazeCast\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "TestApp\\": "tests/TestApp/",
            "Crustum\\BlazeCast\\Test\\": "tests/"
        }
    },
    "scripts": {
        "cs-check": "phpcs -p --standard=phpcs.xml src/ tests/",
        "cs-fix": "phpcbf --standard=phpcs.xml src/ tests/",
        "test": "phpunit",
        "test:unit": "phpunit --testsuite=Unit",
        "test:integration": "phpunit --testsuite=Integration",
        "test:coverage": "phpunit --coverage-html coverage",
        "stan": "tools/phpstan analyse src/ tests/",
        "stan-test": "tools/phpstan analyse  tests/",
        "stan-baseline": "tools/phpstan analyse src/ tests/ --generate-baseline"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        },
        "platform-check": false
    },
    "repositories": []
}
